extends ../../layouts/admin

append breadcrumbs
  li: a(href='/admin/users') Users Administration
  li.active= title

block body
  p.alert.alert-warning <strong>TODO</strong>: Please add validation here.

  form.form-horizontal(action='/admin/users/#{result.user.id}', method='post',
        role='form')
    fieldset
      legend Fill out the form below to edit an existing User.
      include _form

      input(type='hidden', name='_csrf', value=token)
      input(type='hidden', name='_method', value='put')

      .form-group
        .col-md-offset-3.col-md-9
          .btn-group
            button.btn.btn-primary(type='submit') Edit User
            a.btn.btn-default(href='/admin/users', role='button') Cancel