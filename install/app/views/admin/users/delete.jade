extends ../../layouts/admin

append breadcrumbs
  li: a(href='/admin/users') Users Administration
  li.active= title

block body
  h3.text-warning Are you sure you want to delete this user?
  form(action='/admin/users/#{result.user.id}', method='post', role='form')
    table.table.table-striped.table-hover
      tr
        th Display Name
        td #{result.user.displayName}
      tr
        th Email Address
        td #{result.user.email}
      tr
        th Profile Photo
        td
          .col-md-4
            a.thumbnail(href='http://placehold.it/250x250/428bca/FFFFFF&text=Gravitar+Placeholder')
              img(src='http://placehold.it/250x250/428bca/FFFFFF&text=Gravitar+Placeholder',
                  alt='Gravatar Image Should Go Here')
      tr
        th Member Since
        td #{DateHelper.getHumanDate(result.user.created)}

    input(type='hidden',name='_csrf',value=token)
    input(type='hidden',name='_method',value='delete')

    .form-actions
      .btn-group
        button.btn.btn-danger
          i.fa.fa-times
          |&nbsp;Delete User
        a.btn.btn-default(href='/admin/users', role='button') Cancel