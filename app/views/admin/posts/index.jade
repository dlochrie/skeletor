extends ../layout
block body

  h2 Manage Posts

  table.table.table-hover.table-striped
    thead
      tr
        th Title
        th Author
        th Comment Count
        th Created
        th Updated
    tbody
    if (posts.length)
      each post in posts
        tr
          td
            a(href='/admin/posts/#{post.post_id}/edit') #{post.post_title}
          td  
            a(href='/users/#{post.user_id}/') #{post.user_displayName}
          td 
            span.badge.badge-info 8
          td #{post.post_created.toUTCString()}
          td #{post.post_updated.toUTCString()}
    else
      tr
        td(colspan=5) No Posts Found.
