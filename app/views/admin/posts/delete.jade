extends ../../layouts/admin

append breadcrumbs
  li
    a(href="/admin/posts") posts administration
    span.divider /
  li.active posts delete

block body
  h2 Deleting Post
    .btn-group.pull-right
      a.btn(href='/admin') Admin Home
      a.btn(href='/admin/posts') Posts Administration
      a.btn(href='/admin') Admin Home

  h3.text-warning Are you sure you want to delete this post?
  form(action='/admin/posts/#{post.post_id}',method='post')
    article
      table.table.table-hover
        tr
          th Title
          td #{post.post_title}
        tr
          th Author
          td #{post.user_displayName}

      h4 Description
      .well!= post.post_description
      h4 Body
      .well!= post.post_body

    input(type='hidden',name='_csrf',value=token)
    input(type='hidden',name='_method',value='delete')

    .form-actions
      .btn-group
        button.btn.btn-danger
          i.icon-remove.icon-white
          |&nbsp;Delete Post
        a.btn(href='/admin/posts') Cancel