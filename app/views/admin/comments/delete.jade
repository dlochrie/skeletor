extends ../../layouts/admin

append breadcrumbs
  li
    a(href="/admin/comments") comment administration
    span.divider /
  li.active= title

block body
  h2 Deleting Comment
    .btn-group.pull-right
      a.btn(href='/admin') Admin Home
      a.btn(href='/admin/comments') Comments Administration
      a.btn(href='/admin') Admin Home

  h3.text-warning Are you sure you want to delete this comment?
  form(action='/admin/comments/#{comment.comment_id}',method='post')
    h2 Showing Comment
    .row: .span8
      table.table.table-striped.table-hover
        tr
          th Body
          td #{comment.comment_body}
        tr
          th Post
          td #{comment.post_id}
        tr
          th User
          td #{comment.user_id}
        tr
          th Flagged?
          td #{comment.flagged}

    input(type='hidden',name='_csrf',value=token)
    input(type='hidden',name='_method',value='delete')

    .form-actions
      .btn-group
        button.btn.btn-danger
          i.icon-remove.icon-white
          |&nbsp;Delete Comment
        a.btn(href='/admin/comments') Cancel