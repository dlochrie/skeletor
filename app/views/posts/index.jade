extends ../layouts/main

block body
  h2 Posts

  if (posts.length)
    each post in posts
      .row
        .span8
          h3.headline: a(href='/posts/#{post.post_id}')= post.post_title
          h5.byline by 
            a(href='/users/#{post.user_id}')= post.user_displayName
            span.pull-right: small #{post.post_created.toUTCString()}
          div!= post.post_description
  else
    .row
      .span8
        h3 There are no posts to display.